@model login_MVC.Models.loginViewModel


@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { type = "email", required = "required" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div>
        @Html.LabelFor(m => m.Password)
        @Html.TextBoxFor(m => m.Password, new { required = "required" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div>
        <button type="submit">Login</button>
    </div>

    if (ViewBag.Error != null)
    {
        <p style="color: red;">@ViewBag.Error</p>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}



